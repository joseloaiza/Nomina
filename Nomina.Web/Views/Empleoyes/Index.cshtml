                </button>
                <button type="button" class="btn btn-primary" id="btnConfirmaEliminar">
                    Si
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/js/jsbusiness/CrudGeneric.js"></script>
    <script src="~/lib/DataTables/dataTables.bootstrap.min.js"></script>

    <!-- JS -->


    <script type="text/javascript">
        $(document).ready(function () {

            $("#areaTrabajo").hide();
            $("#accordion").on('click', function () {
                $("#areaTrabajo").slideToggle('slow');
            });
            getEmpleoyes();

            $("#btnNuevo").click(function () {
                HabilitarNuevo(true);
                limpiarMensajeObligatorios();
            });
            $("#btnBusqueda").click(function () {
                HabilitarNuevo(false);
            });
        })



        function getEmpleoyes() {
            var columns = [];
            columns[0] = { "mData": "id" };
            columns[1] = { "mData": "numDoc" };
            columns[2] = { "mData": "documentType" };
            columns[3] = { "mData": "firstName" };
            getData("/api/EmpleoyesAPI", columns, 4, '#Templeoyes');
        }



        function HabilitarNuevo(panelnuevo) {
            if (panelnuevo) {
                //$("#txtid").val('-1');
                //HabilitarDeshabilitar(true);
                $("#divbuscar").hide("slow");
                $("#divnuevo").show("slow", function () { $("#areaTrabajo").show("slow"); });
            }
            else {
                $("#divnuevo").hide("slow");
                $("#divbuscar").show("slow", function () { $("#areaTrabajo").show("slow"); });
            }
            LimpiarCampos();
        }

        function LimpiarCampos() {


        }

    </script>

}



